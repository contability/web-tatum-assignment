{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "paths": {
      "@Components/*": ["./components/*"],
      "@Styles/*": ["./styles/*"],
      "@Assets/*": ["./public/assets/*"],
      "@Constants/*": ["./constants/*"],
      "@DataTypes/*": ["./types/*"],
      "@Utils/*": ["./lib/utils/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "postcss.config.mjs",
    ".storybook/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
